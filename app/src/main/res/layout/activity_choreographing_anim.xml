<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.animations.PropertyAnimActivity">

    <ImageView
        android:id="@+id/coinImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="250dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_coin"
        tools:ignore="ContentDescription" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        tools:ignore="ButtonStyle">

        <Button
            android:id="@+id/setFromXml"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:text="@string/animate_via_xml" />

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/setFromCode"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:text="@string/anima_via_code" />

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/viewPropertyAnimator"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:text="Use View Property Animator" />

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/propertyValuesHolder"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:text="Use Property Values Holder" />


    </LinearLayout>
</LinearLayout>